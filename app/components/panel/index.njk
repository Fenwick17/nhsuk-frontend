{% set html_style = 'background-color: #f0f4f5;' %}
{% set title = 'Panel' %}
{% from 'components/panel/macro.njk' import panel %}
{% extends 'layout.njk' %}

{% block body %}

  <div class="nhsuk-width-container">
    <main class="nhsuk-main-wrapper" id="maincontent">

      <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">
          {{ panel({
            "heading": "Promo like Card",
            "clickablePanel": true,
            "href": "https://www.nhs.uk",
            "HTML": "<p>This is card, it will be used to combine panel and promo</p>"
          }) }}
          {{ panel({
            "heading": "Link Card",
            "href": "https://www.nhs.uk",
            "HTML": "<p>This is card, it will be used to combine panel and promo</p>"
          }) }}
          {{ panel({
            "heading": "Card",
            "HTML": "<p>This is card, it will be used to combine panel and promo</p>"
          }) }}
          {{ panel({
            "heading": "Card with label",
            "label": "Card with a label",
            "HTML": "<p>This is card, it will be used to combine panel and promo</p>"
          }) }}
        </div>
      </div>

    </main>
  </div>

{% endblock %}