{% set headingLevel = params.headingLevel if params.headingLevel else 3 %}
<div class="nhsuk-card {% if params.clickableCard %}clickable-card{% endif %}">
  {% if params.href %}
    <a href="{{ params.href }}"><h{{ headingLevel }}>{{ params.heading | safe }}</h{{ headingLevel }}></a>
  {% else %}
  <h{{ headingLevel }}>{{ params.heading | safe }}</h{{ headingLevel }}>
  {% endif %}
  {{ params.HTML | safe }}
</div>